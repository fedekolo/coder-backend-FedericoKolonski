html
    head
        title="Actualizar contenido"
        link(
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
            crossorigin="anonymous"
        )
    body
        h1(
            style="text-align: center; margin-top: 20px;"
        ) Actualizar contenido
        form(
            method="POST" 
            action="/api/productos/guardar" 
            style="max-width: 80%; max-height: 80%; margin: 20px auto;"
        )
            div(
                class="form-floating mb-3"
            )
                input(
                    type="text" 
                    class="form-control" 
                    id="floatingInput" 
                    placeholder="Title" 
                    name="title"
                )
                label(
                    for="floatingInput"
                ) Title
            div(
                class="form-floating mb-3"
            )
                input(
                    type="number" 
                    class="form-control" 
                    id="floatingPassword" 
                    placeholder="Price" 
                    name="price"
                )
                label(
                    for="floatingPassword"
                ) Price 
            div(
                class="form-floating mb-3"
            )
                input(
                    type="text" 
                    class="form-control" 
                    id="floatingThumbnail" 
                    placeholder="Thumbnail" 
                    name="thumbnail"
                )
                label(
                    for="floatingThumbnail"        
                ) Thumbnail
            button(
                type="sumbit" 
                class="btn btn-info" 
                style=" width: 100%;"
            ) Enviar