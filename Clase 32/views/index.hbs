<h1 style="text-align: center; margin-top: 20px;">Productos</h1>
<table class="table table-striped table-hover" style="width: 80%; margin: auto; text-align:center;">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Foto</th>
        </tr>
    </thead>
    <tbody>
        {{#if sinProductos}}
            <tr>
                <td></td>
                <td><h3>No hay productos para mostrar</h3></td>
                <td></td>
            </tr>
        {{else}}
            {{#each producto}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>${{this.price}}</td>
                    <td><img src="{{this.thumbnail}}" alt="{{this.title}}"style="height: 30px;"></td>
                </tr>
            {{/each}}
        {{/if}}
    </tbody>
</table>